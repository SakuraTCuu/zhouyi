<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@mipmap/name_beijing"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_beiyong_first"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/name_fangge"
            android:gravity="center"
            android:padding="20dp"
            android:text="李"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_beiyong_second"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/name_fangge"
            android:gravity="center"
            android:padding="20dp"
            android:text="李"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_beiyong_third"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/name_fangge"
            android:gravity="center"
            android:padding="20dp"
            android:text="李"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <LinearLayout
            android:id="@+id/ll_beiyong_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/name_shachu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>