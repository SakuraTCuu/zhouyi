            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/qiming_color"
            android:divider="@drawable/bazi_line_h"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="" />

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="年柱" />

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="月柱" />

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="日柱" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="时柱" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="十神" />

                <TextView
                    android:id="@+id/tv_bazi_shen_0"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="年柱" />

                <TextView
                    android:id="@+id/tv_bazi_shen_1"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="月柱" />

                <TextView
                    android:id="@+id/tv_bazi_shen_2"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="日柱" />

                <TextView
                    android:id="@+id/tv_bazi_shen_3"
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="时柱" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="乾造" />

                <TextView
                    android:id="@+id/tv_bazi_qian_0"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="年柱" />

                <TextView
                    android:id="@+id/tv_bazi_qian_1"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="月柱" />

                <TextView
                    android:id="@+id/tv_bazi_qian_2"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="日柱" />

                <TextView
                    android:id="@+id/tv_bazi_qian_3"
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="时柱" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="藏干" />

                <TextView
                    android:id="@+id/tv_bazi_cang_0"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="年柱" />

                <TextView
                    android:id="@+id/tv_bazi_cang_1"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="月柱" />

                <TextView
                    android:id="@+id/tv_bazi_cang_2"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="日柱" />

                <TextView
                    android:id="@+id/tv_bazi_cang_3"
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="时柱" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="胎元" />

                <TextView
                    android:id="@+id/tv_bazi_taiyuan"
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="胎元" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="胎息" />

                <TextView
                    android:id="@+id/tv_bazi_taixi"
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="胎元" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="命宫" />

                <TextView
                    android:id="@+id/tv_bazi_minggong"
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="命宫" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/bazi_line_h"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="纳音" />

                <TextView
                    android:id="@+id/tv_bazi_na_0"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="年柱" />

                <TextView
                    android:id="@+id/tv_bazi_na_1"
                    android:layout_width="1dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="月柱" />

                <TextView
                    android:id="@+id/tv_bazi_na_2"
                    android:layout_width="1dp"
