<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bazi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/analysis_biaoti"
        android:gravity="center"
        android:text="八字合婚" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/index_peidui" />

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-20dp">

                    <TextView
                        android:id="@+id/text_xiongji_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合婚配对"
                        android:textColor="#FF6082"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/text_xiongji_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_xiongji_1"
                        android:text="一对一咨询" />

                    <TextView
                        android:id="@+id/text_xiongji_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_xiongji_2"
                        android:layout_marginTop="5dp"
                        android:text="走向幸福殿堂" />

                </RelativeLayout>

                <!--                <View-->
                <!--                    android:layout_width="2dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:background="#ccc" />-->
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ccc" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_ganqing_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/text_ganqing_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱情测试"
                        android:textColor="#FF6082"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/text_ganqing_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_ganqing_1"
                        android:layout_marginTop="10dp"
                        android:text="是否是" />

                    <TextView
                        android:id="@+id/text_ganqing_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_ganqing_2"
                        android:layout_marginTop="5dp"
                        android:text="未来的另一半" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/index_ceshi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_ganqing_right"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/text_caifu_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="桃花指数"
                            android:textColor="#FF6082"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/text_caifu_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_caifu_1"
                            android:layout_marginTop="10dp"
                            android:text="测算桃花运" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/index_taohua" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>