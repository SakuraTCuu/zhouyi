<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/zgjm_beijing"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/zgjm_zhougong"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_input_jiemeng"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@mipmap/zgjm_kuang"
                android:gravity="center"
                android:hint="输入你的梦境关键字" />

            <Button
                android:id="@+id/btn_jiemeng"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#395C74"
                android:text="解梦" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />
    </LinearLayout>
</ScrollView>